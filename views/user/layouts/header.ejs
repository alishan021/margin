<header class="header header-22">
    <div class="header-middle">
        <div class="container">
            <div class="header-left">
                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>

                <a href="/" class="logo">
                    <img src="/user/assets/images/demos/demo-22/logo.png" alt="Molla Logo" width="130" height="30">
                </a>
            </div><!-- End .header-left -->

            <div class="header-center">
                <div class="header-search header-search-extended header-search-visible header-search-no-round">
                    <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                    <form action="#" method="get">
                        <div class="header-search-wrapper search-wrapper-wide">
                            <label for="q" class="sr-only">Search</label>
                            <input type="search" class="form-control search-input" name="q" id="q" placeholder="Search product ..." required>

                            <button class="btn btn-primary search-product" type="button"><i class="icon-search"></i></button>
                        </div><!-- End .header-search-wrapper -->
                    </form>
                </div><!-- End .header-search -->
            </div>

            <div class="header-right">
                <a href="/wishlist" class="wishlist-link">
                    <i class="icon-heart-o"></i>
                    <span class="wishlist-count">3</span>
                </a>

                <div class="dropdown cart-dropdown">
                    <a href="/cart" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false" data-display="static">
                        <i class="icon-shopping-cart"></i>
                        <span class="cart-count">2</span>
                    </a>
                </div><!-- End .cart-dropdown -->
            </div><!-- End .header-right -->
        </div><!-- End .container -->
    </div><!-- End .header-middle -->

    <div class="wrap-container sticky-header">
        <div class="header-bottom">
            <div class="container">
                <!-- <div class="header-left"> -->
                    <!-- <div data-visible="true">

                    </div> -->
                <!-- </div> -->
                <div class="header-center">
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container">
                                <a href="/" >Home</a>
                            </li>
                            <li>
                                <a href="/product-list" >Shop</a>
                            </li>
                        </ul><!-- End .menu -->
                    </nav><!-- End .main-nav -->
                </div><!-- End .header-left -->

                <% if(!userIn){ %>
                <div class="d-flex" style="margin-left: 200px;">
                    <div class="header-right ">
                        <span><a href="/login" class="font-weight-bold">Login</a></span> <!-- style.font-weigth = 500 -->
                    </div>
                    <div class="header-right">
                        <span><a href="/signup" class="font-weight-bold">Signup</a></span>
                        <!-- style.font-weigth = 500 -->
                    </div>
                <% }else { %>
                    <div class="header-right">
                        <span><a href="/logout" class="font-weight-bold">Logout</a></span>
                    </div>
                    <div class="header-right">
                        <span><a href="/dashboard" class="font-weight-bold">Account
                    </div>
                <% } %>
                 <!-- End .header-right -->
                 
                </div>
        </div><!-- End .header-bottom -->
    </div><!-- End .wrap-container -->
</header><!-- End .header -->
